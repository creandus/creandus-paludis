#!/bin/sh
# Paludis hook for dynusers' addgroup.sh and adduser.sh scripts

prefix=@prefix@
datarootdir=@datarootdir@
package=@PACKAGE@
package=${package/-portage}
scriptdir=@datadir@/${package}

for i in ${ENEWGROUPS} ; do
	"${scriptdir}/addgroup.sh" "${i}" "${CATEGORY}/${PF}" \
		"${USERLAND}-${ELIBC}"
done

for i in ${ENEWUSERS} ; do
	"${scriptdir}/adduser.sh" "${i}" "${CATEGORY}/${PF}" \
		"${USERLAND}-${ELIBC}"
done

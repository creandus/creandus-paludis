# Paludis hook for dynusers. Called before installing to add all necessary
# users and groups.
#
# $Id: $

do_hook() {
	local scriptdir="${SCRIPTDIR:-@SCRIPTDIR@}"

	"${scriptdir}/add.bash" "${EUSERS}" "${EGROUPS}" \
		"${CATEGORY}/${PF}" "${USERLAND}-${ELIBC}"
}

do_hook

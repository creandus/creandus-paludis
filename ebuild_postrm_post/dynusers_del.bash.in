#!/bin/sh
# Paludis hook for dynusers' addgroup.bash and adduser.bash scripts
# Called after a package has been removed, to update the 
# user/group database

prefix=@prefix@
datarootdir=@datarootdir@
package=@PACKAGE@
package=${package/-paludis}
scriptdir=@datadir@/${package}

# Remove only the first instance of CATEGORY/PF from the db files
"${scriptdir}"/db.bash del "${CATEGORY}/${PF}"

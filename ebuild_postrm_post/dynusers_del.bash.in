# Paludis hook for dynusers. Called after a package has been removed, updated,
# or re-merged.
#
# $Id: $

do_hook() {
	local scriptdir="${SCRIPTDIR:-@SCRIPTDIR@}"

	# Remove only the first instance of CATEGORY/PF from the db files
	"${scriptdir}/cleanup.bash" "${ENEWUSERS}" "${ENEWGROUPS}" \
		"${CATEGORY}/${PF}" "${USERLAND}-${ELIBC}"

}

do_hook

#!/bin/sh
# Paludis hook for dynusers' addgroup.sh and adduser.sh scripts
# Called after a package has been removed, to update the 
# user/group database

prefix=@prefix@
datarootdir=@datarootdir@
package=@PACKAGE@
package=${package/-portage}
scriptdir=@datadir@/${package}

# Read the common config stuff
. "${scriptdir}/common/config.sh"

# Remove only the first instance of CATEGORY/PF from the db files
sed -i /^${CATEGORY}\\/${PF}\$/\{x\;/Y/\!\{s/^/Y/\;h\;d\}\;x\;\} \
	"${DBDIR}"/{users,groups}/*
